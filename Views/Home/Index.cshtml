<!-- C# code indicated by @{} -->
@{
    ViewData["Title"] = "Home Page";
}

<!-- HTML code -->
<div class="text-center">
    <h1 class="display-4">Welcome!</h1>

    <!-- Button for "Overview" -->
    <!-- bootstrap class btn and btn-primary -->
    <!-- don't need asp-controller="Home" because we are already in the home
        folder, which indicates that we want to communicate with the 
        Home controller  -->
    <!-- btn-primary = blue button -->
    <a asp-action="Expenses" class="btn btn-primary">Overview</a>

    <!-- Button for creating and editing expenses -->
    <!-- btn-secondary = gray button -->
    <a asp-action="CreateEditExpense" class="btn btn-secondary">Create New</a>
    

</div>
